        text: 'English'
        dropdown_bg: [1, 1, 1, 1]
    MDLabel:
        text: 'Name'
        font_size: 20
        halign: "left"
        mode: "rectangle"
        pos_hint: {"x": 0.1, 'y': 0.20}
    MDTextFieldRect:
        hint_text : "Igor"
        size_hint: 0.7, None
        height: "30dp"
        pos_hint: {"x": 0.1, 'y': 0.61}
    MDLabel:
        text: 'Mail'
        font_size: 20
        halign: "left"
        mode: "rectangle"
        pos_hint: {"x": 0.1, 'y': 0.05}
    MDTextFieldRect:
        hint_text : "Igor@mail.ru"
        size_hint: 0.7, None
        height: "30dp"
        pos_hint: {"x": 0.1, 'y': 0.46}
    MDRaisedButton:
